<h2> Edit Product </h2>

<%= simple_form_for [:admin, @product] do |f| %>

  <div class="group">
    <%= f.input :title, label: '标题' %>
  </div>

  <div class="group">
    <%= f.input :description, label: '描述'  %>
  </div>

  <div class="group">
    <%= f.input :quantity, label: '数量' %>
  </div>

  <div class="group">
    <%= f.input :price, label: '价格' %>
  </div>

   <% if @product.image.present? %>
     <span>目前商品图</span> <br>
     <%= image_tag(@product.image.thumb.url) %>
   <% end %>
  
   <div class="group">
     <!-- <%= f.input :image, as: :file %> -->
     <!-- <%= f.file_field :image %> -->
     <%= f.input :image, as: :file, label: "上传照片" %>
   </div>

  <%= f.submit "Submit", label: "更新", data: { disable_with: "Submitting..." } %>

<% end %>