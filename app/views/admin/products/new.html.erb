<h2> New Product </h2>

<%= simple_form_for [:admin, @product] do |f| %>

  <div class="group">
    <%= f.input :title, label: '标题' %>
  </div>

  <div class="group">
    <%= f.input :description,  label: '描述'  %>
  </div>

  <div class="group">
    <%= f.input :quantity,  label: '数量'  %>
  </div>

  <div class="group">
    <%= f.input :price, label: '价格'  %>
  </div>

  <div class="group">
      <!-- <%= f.input :image, as: :file %> -->
      <%= f.input :image, as: :file, label: "Image of house" %>
      <!-- <%= f.file_field :image %> -->
  </div>

  <%= f.submit "Submit", data: { disable_with: "Submitting..." } %>

<% end %>